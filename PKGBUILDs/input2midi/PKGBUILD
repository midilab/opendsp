# Maintainer: Midilab <contact@midilab.co>

pkgname=input2midi
pkgver=2.8a8b0e0
pkgrel=1
pkgdesc='Multi Input to Midi'
arch=(any)
url='http://midilab.co/input2midi'
license=('GPL')
depends=()
source=("git+https://github.com/midilab/input2midi.git")
md5sums=('SKIP')

pkgver()
{
  cd "$pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
  #echo $(git describe --long | sed 's/\([^-]*-g\)/r\1/;s/-/./g')
}

prepare() 
{
  cd "${srcdir}/${pkgname}"
}

build() 
{
  cd "${srcdir}/${pkgname}"
}

package()
{
  cd "${srcdir}/${pkgname}"
  python setup.py install --root="$pkgdir"
  install -vd -m 0755 $pkgdir/usr/lib/python3.7/site-packages/input2midi/
  cp -Rf input2midi/lib $pkgdir/usr/lib/python3.7/site-packages/input2midi/
  install -vD run -m 0755 $pkgdir/usr/bin/input2midi
  install -vd -m 0755 $pkgdir/usr/share/input2midi/
  install -vD inputtomidi.json -m 0755 $pkgdir/usr/share/input2midi/
}
