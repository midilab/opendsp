# Maintainer: Romulo Silva <contact@midilab.co>
_pkgbasename=distrho-lv2
pkgname=${_pkgbasename}-git
pkgver=r433.1dd1200c
commit=1dd1200c5b4a34d1b6521d4513e60a34bd8801fa
pkgrel=1
pkgdesc="Distrho LV2 Audio Plugins, using the JUCE Toolkit"
arch=('armv7h')
url="http://distrho.sourceforge.net/"
license=('GPL' 'GPL3')
depends=('gcc-libs' 'lv2' 'libxext' 'freetype2' 'alsa-lib' 'fftw')
makedepends=('git' 'premake3' 'libxinerama' 'libxrender' 'libxcursor' 'ladspa')
provides=("${_pkgbasename}")
conflicts=("${_pkgbasename}" 'distrho-plugins' 'distrho-plugins-lv2-git')
source=("${_pkgbasename}::git+https://github.com/DISTRHO/DISTRHO-Ports.git"
        "meson_options.txt")
#source=("${_pkgbasename}::git+https://github.com/DISTRHO/DISTRHO-Ports.git#commit=${commit}")
sha256sums=('SKIP' 'SKIP')

pkgver() {
  cd "${srcdir}/${_pkgbasename}"

  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
  cd "${srcdir}/${_pkgbasename}"

  cp ../../meson_options.txt .
}

build() {
  cd "${srcdir}/${_pkgbasename}"
  meson build --buildtype release
  ninja -C build
}

package() {
  cd "${srcdir}/${_pkgbasename}"
  DESTDIR="${pkgdir}/" ninja -C build install
}

