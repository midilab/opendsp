
# Maintainer: opale95
# Contributor: yochananmarqos
pkgname=lebiniou
pkgver=3.66.0
pkgrel=1
pkgdesc="User-friendly, powerful music visualization / VJing tool"
arch=('x86_64' 'armv7h' 'i686')
url="https://biniou.net"
license=('GPL')
depends=('imagemagick' 'fftw' 'sdl2' 'libcaca' 'ffmpeg' 'orcania' 'yder' 'ulfius')
makedepends=('graphicsmagick')
source=("https://gitlab.com/lebiniou/lebiniou/-/archive/version-$pkgver/lebiniou-version-$pkgver.tar.gz")
sha256sums=('6947efddb4abb2ea5fd3eb2610955bbd4aafaf7a9bb6ce95ac8012af7e524e0a')

build() {
	cd "$pkgname-version-$pkgver"
  export CFLAGS="${CFLAGS} -I/usr/include/GraphicsMagick"
	./bootstrap
	export PKG_CONFIG_PATH="$PKG_CONFIG_PATH:/usr/lib/pkgconfig"
	./configure --prefix=/usr
  sed -i 's/-lMagickWand-7.Q16HDRI -lMagickCore-7.Q16HDRI/-lImageMagick-7.1.0.Q16HDRI -lGraphicsMagick-1.3.40.Q16HDRI/g' Makefile
	make
}

package() {
	cd "$pkgname-version-$pkgver"
	make DESTDIR="$pkgdir/" install
}
