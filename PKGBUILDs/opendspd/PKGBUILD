# Maintainer: Midilab <contact@midilab.co>

pkgname=opendspd
pkgver=103.72068df
pkgrel=1
pkgdesc='OpenDSP Service'
arch=(any)
url='http://midilab.co/opendspd'
license=('GPL')
depends=(sudo xorg-server xorg-xinit xorg-server-common xorg-server-xvfb xterm x11vnc alsa-firmware alsa-lib alsa-plugins alsa-utils python-setuptools python-pip liblo python-pyliblo cython python-decorator python-appdirs python-certifi python-packaging python-pillow python-psutil python-pyparsing python-pyserial python-six python-tornado python-virtualenv python-jack-client jack mididings mod-ttymidi xdotool ingen-git ecasound samba cpupower projectm projectm-sdl pd pd-gem pd-lua parted openbox create_ap)
install="$pkgname.install"
source=("git+https://github.com/midilab/opendspd.git")
md5sums=('SKIP')

pkgver()
{
  cd "$pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
  #echo $(git describe --long | sed 's/\([^-]*-g\)/r\1/;s/-/./g')
}

prepare() 
{
  cd "${srcdir}/${pkgname}"
}

build() 
{
  cd "${srcdir}/${pkgname}"
}

package()
{
  cd "${srcdir}/${pkgname}/src"
  python setup.py install --root="$pkgdir"
  install -vD opendsp-daemon   -m 0755 $pkgdir/usr/bin/opendspd
  cd "${srcdir}/${pkgname}/services"
  install -vD opendsp.service -m 0644 $pkgdir/etc/systemd/system/opendsp.service
  install -vD vdisplay.service  -m 0644 $pkgdir/etc/systemd/system/vdisplay.service
  install -vD display.service  -m 0644 $pkgdir/etc/systemd/system/display.service
  install -vD sambafix.service  -m 0644 $pkgdir/etc/systemd/system/sambafix.service
  cd "${srcdir}/${pkgname}/data"
  mkdir -p $pkgdir/home/opendsp/data/mod
  install -vD system.cfg  -m 0644 $pkgdir/home/opendsp/data/
  cp -Rf mod/* $pkgdir/home/opendsp/data/mod/
}
