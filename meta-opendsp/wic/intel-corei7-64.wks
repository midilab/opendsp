# Create a live self-installer disk image
# populate content to install using IMAGE_BOOT_FILES
part /boot --source bootimg-efi --sourceparams="loader=grub-efi, title=install, label=install-efi, initrd=${INITRD_IMAGE_LIVE}-${MACHINE}.${INITRAMFS_FSTYPES}" --ondisk sda --label install --align 1024 --use-uuid --active
part / --source rootfs --rootfs-dir=${IMAGE_ROOTFS} --ondisk sda --label image --align 1024 --use-uuid --fstype=ext4
# added by opendsp
part /home/opendsp/data --source rootfs --rootfs-dir=${IMAGE_ROOTFS}/home/opendsp/data --ondisk sda --fstype=ext4 --label data --align 1024 --size 256M --use-uuid

bootloader --ptable gpt --timeout=0 --append=" rootwait "
